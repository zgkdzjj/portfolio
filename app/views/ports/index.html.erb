<h1>Portfolio Items</h1>

<a href="/ports/new">Create New</a>

<%= link_to "Create New", new_port_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, port_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>

  <a href="/ports/<%= portfolio_item.id %>/edit">Edit</a>
  <%= link_to "EditTwo", edit_port_path(portfolio_item)%>
<% end %>
